{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1002",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "域创金标小助手",
    "version": "1.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "http": {
        "scope": ["http://**", "https://**"]
      },
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "scope": ["**"],
        "all": true
      },
      "dialog": {
        "all": true,
        "open": true,
        "save": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.tauri.ycjb",
      "shortDescription": "域创金标小助手",
      "targets": "all",
      "windows": {
        "wix": {
          "language": "zh-CN"
        }
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "title": "域创金标小助手",
        "width": 1024,
        "height": 768
      }
    ]
  }
}
